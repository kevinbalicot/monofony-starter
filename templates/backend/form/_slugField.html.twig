<div class="{% if slugField.vars.required %}required {% endif %}field{% if slugField.vars.errors|length > 0 %} error{% endif %} ui loadable form">
    {{ form_label(slugField) }}
    {% if resource.slug == null %}
        {{ form_widget(slugField, {'attr': {
            'data-url': path('backend_blog_generate_slug'),
            'data-parent': app.request.attributes.get('id'),
            'data-slugger': 'slug'
        }}) }}
    {% else %}
        <div class="ui action input">
            {{ form_widget(slugField, {'attr': {'readonly': 'readonly', 'data-url': path('backend_blog_generate_slug')}}) }}
            <span class="ui icon button toggle-slug-modification">
            <i class="lock icon"></i>
        </span>
        </div>
    {% endif %}
    {{ form_errors(slugField) }}
</div>
